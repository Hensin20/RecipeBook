<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCreate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/textView_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/texView_menu_create"
                android:textSize="24sp"
                android:textColor="@color/red"
                android:gravity="center"
                android:fontFamily="@font/opensans_bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/texView_menu_create_AddPhoto"
                android:textSize="18sp"
                android:fontFamily="@font/opensans_bold"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="9dp"
                android:src="@drawable/icon_add_photo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/texView_menu_create_AddTitle"
                android:textSize="18sp"
                android:fontFamily="@font/opensans_bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:counterEnabled="true"
                app:counterMaxLength="50">
            <EditText
                android:id="@+id/editTextText_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:ems="20"
                android:maxLength="50"
                android:inputType="text"
                android:textColor="@color/whiteText"
                android:background="@drawable/background_edittext"
                android:text="Напиклад, овощний салат" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/texView_menu_create_AddDescription"
                android:textSize="18sp"
                android:fontFamily="@font/opensans_bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:counterEnabled="true"
                app:counterMaxLength="200">
            <EditText
                android:id="@+id/editTextText_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minLines="5"
                android:maxLines="8"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_margin="10dp"
                android:ems="20"
                android:maxLength="200"
                android:inputType="textMultiLine"
                android:textColor="@color/whiteText"
                android:background="@drawable/background_edittext"
                android:text="Придумайте щось апетитне для опису " />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/texView_menu_create_AddIngredients"
                android:textSize="18sp"
                android:fontFamily="@font/opensans_bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/ingredient_input"
                    android:textColorHint="@color/whiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittext"
                    android:textColor="@color/whiteText"
                    android:hint="@string/texView_menu_create_AddIngredients"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="false"
                app:chipSpacing="8dp"/>



        </LinearLayout>
    </ScrollView>

</FrameLayout>